<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <Button
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="300dp"
        android:layout_marginBottom="31dp"
        android:text="Back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fotoPokemonView1"
            android:layout_width="200dp"
            android:layout_height="266dp" />

        <ImageView
            android:id="@+id/fotoPokemonView2"
            android:layout_width="210dp"
            android:layout_height="266dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/nombrePokemonView"
        android:layout_width="286dp"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:text="@string/app_name"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tipopokemon"
        android:layout_width="288dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textAllCaps="true" />

    <TextView
        android:id="@+id/descripcionpokemon"
        android:layout_width="385dp"
        android:layout_height="71dp"
        android:layout_gravity="center"
        android:text="@string/app_name"
        android:textAllCaps="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Titulohabilidad"
            android:layout_width="144dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:text="Habilidad:"
            android:textAllCaps="true" />

        <TextView
            android:id="@+id/habilidadpokemon"
            android:layout_width="269dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:textAllCaps="true" />
    </LinearLayout>

    <TextView
        android:id="@+id/statspokemon"
        android:layout_width="413dp"
        android:layout_height="154dp"
        android:layout_gravity="center"
        android:textAllCaps="true" />


</LinearLayout>