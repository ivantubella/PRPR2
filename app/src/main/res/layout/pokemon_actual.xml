<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fotoPokemonView1"
            android:layout_width="200dp"
            android:layout_height="266dp" />

        <ImageView
            android:id="@+id/fotoPokemonView2"
            android:layout_width="210dp"
            android:layout_height="266dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/nombrePokemonView"
        android:layout_width="286dp"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tipopokemon"
        android:layout_width="288dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textAllCaps="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imagetipo0"
            android:layout_width="50dp"
            android:layout_height="50dp"
     />

        <ImageView
            android:id="@+id/imagetipo1"
            android:layout_width="50dp"
            android:layout_height="56dp"
 />
    </LinearLayout>

    <TextView
        android:id="@+id/descripcionpokemon"
        android:layout_width="385dp"
        android:layout_height="148dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textAllCaps="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Titulohabilidad"
            android:layout_width="144dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:text="   Habilidad:"
            android:textAllCaps="true" />

        <TextView
            android:id="@+id/habilidadpokemon"
            android:layout_width="268dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:textAllCaps="true" />
    </LinearLayout>

    <TextView
        android:id="@+id/statspokemon"
        android:layout_width="413dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:textAlignment="center"

        android:textAllCaps="true" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cazar_pokemon"
        android:layout_width="401dp"
        android:layout_height="146dp"
        android:layout_gravity="center" />


</LinearLayout>